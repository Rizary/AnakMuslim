<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/background_wudhu"
    android:weightSum="1">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/previous"
        android:background="@drawable/previous_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next"
        android:background="@drawable/next_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="false"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="15dp" />

    <ViewFlipper
        android:layout_width="wrap_content"
        android:id="@+id/viewFlipper"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_margin="30dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ImageView"
            android:scaleType="centerCrop"
            android:src="@drawable/cuci_tangan"
            android:layout_below="@+id/contentFlipper"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ImageView2"
            android:scaleType="centerCrop"
            android:src="@drawable/berkumur"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ImageView3"
            android:scaleType="centerCrop"
            android:src="@drawable/membersihkan_hidung"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ImageView4"
            android:scaleType="centerCrop"
            android:src="@drawable/mencuci_muka"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ImageView5"
            android:scaleType="centerCrop"
            android:src="@drawable/mencuci_tangan"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ImageView6"
            android:scaleType="centerCrop"
            android:src="@drawable/mencuci_rambut"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ImageView7"
            android:scaleType="centerCrop"
            android:src="@drawable/membersihkan_telinga"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ImageView8"
            android:scaleType="centerCrop"
            android:src="@drawable/mencuci_kaki"/>


    </ViewFlipper>

    <ViewFlipper
        android:layout_width="wrap_content"
        android:id="@+id/contentFlipper"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@id/viewFlipper"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentRight="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentTop="false"
        android:layout_above="@+id/next">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ContentView"
            android:scaleType="centerCrop"
            android:src="@drawable/description_tangan"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/ContentView2"
            android:scaleType="centerCrop"
            android:src="@drawable/description_kumur"/>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/ContentView3"
            android:scaleType="centerCrop"
            android:src="@drawable/description_hidung"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ContentView4"
            android:scaleType="centerCrop"
            android:src="@drawable/description_muka" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/ContentView5"
            android:scaleType="centerCrop"
            android:src="@drawable/description_lengan"/>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/ContentView6"
            android:scaleType="centerCrop"
            android:src="@drawable/description_rambut"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ContentView7"
            android:scaleType="centerCrop"
            android:src="@drawable/description_telinga" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/ContentView8"
            android:scaleType="centerCrop"
            android:src="@drawable/description_kaki"/>

    </ViewFlipper>

